@page "/quicksort"


<div class="container">
    <h4>Hier wird gemessen, wie lange der Quicksort Algorithmus zum sortieren von 300.000 Einträgen benötigt</h4>
    @if (SortableDataArray != null)
    {
        <div>
            <button  @onclick="sort" disabled="@IsRunning" class="btn btn-primary">Start</button>
            @if (IsRunning)
            {
                <p>Quicksort wird momentan ausgeführt. Bitte warten</p>
            }
            @if (IsFinished)
            {
                <div v-if="showResult" class="card">
                    <div class="card-body">
                        <p>Quicksort wurde beendet</p>
                        <p>Benötigte Zeit @ElapsedTime</p>
                    </div>

                    <div class="card-body">
                        <p>Vorschau der ersten 1000 Elemente:</p>

                        @foreach (var entry in Preview)
                        {
                            <p>
                                <code>@entry.ID</code>
                            </p>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div>
            <div class="spinner-container">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    }
</div>