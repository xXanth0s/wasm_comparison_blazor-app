@page "/quicksortnumbers/{Count:int}/{AutoStart:bool}/{RunCount:int}/{IsJs:bool}"


<div class="container">
    <h1> Quicksort mit Zahlen</h1>
    <h4>Hier wird gemessen, wie lange der Quicksort Algorithmus zum sortieren von @Count Zahlen benötigt</h4>
    @if (SortableDataArray != null)
    {
<div>
    <button @onclick="sort" disabled="@IsRunning" class="btn btn-primary">Start With WebAssembly</button>
    <button @onclick="sortJS" disabled="@IsRunning" class="btn btn-primary ml-2">Start With JavaScript</button>
    @if (IsRunning)
    {
        <p>Quicksort wird momentan ausgeführt. Bitte warten</p>
    }
    @if (IsFinished)
    {
        <div v-if="showResult" class="card">
            <div class="card-body">
                <p>Quicksort wurde beendet</p>
                <p>Benötigte Zeit @ElapsedTime</p>
            </div>

            <div class="card-body">
                <p>Vorschau der ersten 1000 Elemente:</p>

                @foreach (var entry in Preview)
                {
                    <p>
                        <code>@entry</code>
                    </p>
                }
            </div>
        </div>
    }
</div>
    }
    else
    {
        <div>
            <div class="spinner-container">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    }
</div>